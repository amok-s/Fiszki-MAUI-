<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Fiszki.Controls"
             x:Class="Fiszki.Controls.FiszkaCard"
             x:DataType="local:FiszkaCard"
             x:Name="this"
             xmlns:models="clr-namespace:Fiszki.Models">


    <VerticalStackLayout Padding="10">

        <!--F I S Z K A-->

        <!--Obramowanie fiszki-->
        <Border Stroke="#475708"
                StrokeThickness="2"
                StrokeShape="RoundRectangle 10,10,10,10"
                Background="#475708"
                MaximumWidthRequest="500"
                >

            <VerticalStackLayout>
                <Border StrokeThickness="10"
                 StrokeShape="RoundRectangle 5,5,5,5"
                 BackgroundColor="#ebc034"
                        BindingContext="{x:Reference this}">

                    <Border.Stroke>
                        <LinearGradientBrush EndPoint="0,1.6">
                            <GradientStop Color="#ebc034" Offset="0.3" />
                            <GradientStop Color="#cfc517" Offset="0.5" />
                        </LinearGradientBrush>
                    </Border.Stroke>


                    <!--Środek fiszki-->
                    <VerticalStackLayout>
                        <!--Górna belka-->
                        <HorizontalStackLayout Padding="5" FlowDirection="RightToLeft">
                            
                            
                            <!--Edytowanie fiszki-->
                            <Button x:Name="FiszkaEditBtn"
                                    FontFamily="FontAwesome"
                                     Text="{x:Static models:Icons.CircleXmark}"
                                     TextColor="WhiteSmoke"
                                     FontSize="Medium"
                                     BackgroundColor="#333333"
                                     BorderWidth="0"
                                     Clicked="RemoveClicked"/>

                        </HorizontalStackLayout>

                        <!--Słówka-->
                        <VerticalStackLayout Padding="10,10"
                                          BackgroundColor="#333333" >
        
                            <HorizontalStackLayout FlowDirection="RightToLeft">

                                <Label x:Name="ScoreLabel"
                                       Text="{Binding FiszkaObject.memoScore, FallbackValue='0'}"
                                     />


                            </HorizontalStackLayout>

                            <VerticalStackLayout Spacing="35"
                                              Padding="25,55" >

                                <Label x:Name="NativePhraseLabel"
                                    Text="{Binding FiszkaObject.nativePhrase, FallbackValue='pusta fiszka'}" 
                                    HorizontalOptions="Center"
                                    StyleClass="FiszkaLabel"
                                    TextColor="#96B639"/>

                                <Line X1="0"
                                   Y1="20"
                                   X2="300"
                                   Y2="20"
                                   StrokeLineCap="Round"
                                   Stroke="#171615"
                                   StrokeThickness="5" 
                                   HorizontalOptions="Center"
                                   StrokeDashArray="4,4"
                                   StrokeDashOffset="1" />

                                <Label x:Name="TranslatedPhraseLabel"
                                       Text="{Binding FiszkaObject.translatedPhrase, FallbackValue='jest smutna :c'}"
                                    HorizontalOptions="Center"
                                    StyleClass="FiszkaLabel"/>
                            </VerticalStackLayout>

                        </VerticalStackLayout>

                    </VerticalStackLayout>

                </Border>

            </VerticalStackLayout>

        </Border>


    </VerticalStackLayout>






</ContentView>
