<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Fiszki.MyStyles">

    <Style TargetType="Button" Class="MainMenuButton">
        <Setter Property="BackgroundColor" Value="#333333"/>
        <Setter Property="MaximumWidthRequest" Value="300"/>
        <Setter Property="BorderColor" Value="#ebc034"/>
        <Setter Property="BorderWidth" Value="5"/>
        <Setter Property="FontSize" Value="Subtitle"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="TextTransform" Value="Uppercase"/>
        <Setter Property="TextColor" Value="#ebc034"/>
    </Style>

</ResourceDictionary>